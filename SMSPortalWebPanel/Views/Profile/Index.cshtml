
@using SMSPortalWebPanel.ViewModels
@model ProfileViewModel
@section TitleSection{
    پروفایل شخصی
}
@section ActiveProfile{active}
@section HeaderSection{
    <script type="text/javascript">
        function goBack() {
            var url = '@Url.Action("Index", "Sim")';
            window.location.href = url;
            return false;
        }
    </script>
}
@section ContentBody{
    <div class="row">
        <div class="col-lg-4 col-centered">
            <section class="panel">
                <header class="panel-heading">
                    پروفایل شخصی
                </header>
                <div class="panel-body">
                    <form role="form" action="/Profile/Save" method="post">

                        <input type="hidden" name="@Html.NameFor(m => Model.User_UserName).ToString()" value="@Model.User_UserName">


                        <div class="form-group">
                            <label for="Name">نام کاربری:</label>
                            <input type="text" class="form-control" id="txtFamily" name="@Html.NameFor(m => Model.UserName).ToString()" placeholder="نام کاربری را وارد کنید" value="@Model.UserName">
                            <p class="help-block">@Html.ValidationMessageFor(m => Model.UserName)</p>
                        </div>
                        <div class="form-group">
                            <label for="Name">نام:</label>
                            <input type="text" class="form-control" id="txtName" name="@Html.NameFor(m => Model.FirstName).ToString()" placeholder="نام را وارد کنید" value="@Model.User_FirstName">
                            <p class="help-block">@Html.ValidationMessageFor(m => Model.FirstName)</p>
                        </div>
                        <div class="form-group">
                            <label for="Name">نام خانوادگی:</label>
                            <input type="text" class="form-control" id="txtFamily" name="@Html.NameFor(m => Model.LastName).ToString()" placeholder="نام خانوادگی را وارد کنید" value="@Model.User_LastName">
                            <p class="help-block">@Html.ValidationMessageFor(m => Model.LastName)</p>
                        </div>
                        <div class="form-group">
                            <label for="Name">رمز عبور فعلی:</label>
                            <input type="password" class="form-control" name="@Html.NameFor(m => Model.OldPassword).ToString()" placeholder="رمز عبور قبلی را وارد کنید" />
                            <p class="help-block">@Html.ValidationMessageFor(m => Model.OldPassword)</p>
                        </div>
                        <div class="form-group">
                            <label for="Name">رمز عبور جدید:</label>
                            <input type="password" class="form-control" name="@Html.NameFor(m => Model.NewPassword).ToString()" placeholder="رمز عبور جدید را وارد کنید">
                            <p class="help-block">@Html.ValidationMessageFor(m => Model.NewPassword)</p>
                        </div>
                        <div class="form-group">
                            <label for="Name">تکرار رمز عبور جدید:</label>
                            <input type="password" class="form-control" id="txtFamily" name="@Html.NameFor(m => Model.ReNewPassword).ToString()" placeholder="رمز عبور جدید را مجددا وارد کنید">
                            <p class="help-block">@Html.ValidationMessageFor(m => Model.ReNewPassword)</p>
                        </div>

                        <button type="submit" class="btn btn-info">ثبت</button>
                        <button type="submit" class="btn btn-danger" onclick="return goBack();"> بازگشت </button>

                        <p class="help-block">@( Model._Result != null ? Model._Result : "")</p>
                    </form>
                </div>

            </section>

        </div>
    </div>

}

